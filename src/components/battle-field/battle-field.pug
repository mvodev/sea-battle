mixin battle-field({ isEnemy } = {})
  - const columns = ['А','Б','В','Г','Д','Е','Ж','З','И','К']
  - const enemyClassName = isEnemy ? 'battle-field_enemy js-battle-field_enemy' : 'js-droppable'
  - let counter = 0;
  .battle-field.js-battle-field(class=enemyClassName)
    .battle-field__columns
      each val,index in columns
        span=val
    .battle-field__wrapper
      .battle-field__rows
        each val, index in columns
          span=(index+1)
      .battle-field__game
        each val,rowIndex in columns
          .battle-field__row
            each val,index in columns
              .battle-field__cell.js-battle-field__cell(class=enemyClassName data-column=(index) data-row=(rowIndex) data-id=(counter++))
    if !isEnemy
      button.battle-field__generate.js-battle-field__generate Сгенерировать расстановку