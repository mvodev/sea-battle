extends ../layouts/default

block variables
  - const title = 'Игра Морской бой'

block content
  h1.sea-battle__title=title
  .sea-battle__scene
    section.sea-battle__wrapper
      h2.sea-battle__subtitle Ваши корабли
      include ../../components/ship-field/ship-field.pug
    include ../../components/battle-field/battle-field.pug
    section.sea-battle__wrapper
      h2.sea-battle__subtitle Ваше игровое поле
      +battle-field({ columns:['А','Б','В','Г','Д','Е','Ж','З','И','К'] })
    section.sea-battle__wrapper
      h2.sea-battle__subtitle Противник
      +battle-field({ columns:['А','Б','В','Г','Д','Е','Ж','З','И','К'], isEnemy: true })
